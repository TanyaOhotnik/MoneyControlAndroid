<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:id="@+id/item_cost_income"
              android:layout_height="wrap_content"
              android:minHeight="40dp"
              style="?android:listSeparatorTextViewStyle">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/cashTransactionDateTextView"
        android:layout_weight="0.571"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorText"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_menu_camera"
        android:id="@+id/cashTransactionIconImageView"
        android:layout_weight="0.143"
        android:layout_gravity="center_vertical"
        android:padding="5dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/cashTransactionAmountTextView"
        android:layout_weight="0.286"
        android:textSize="16sp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textColor="@color/colorText"/>
</LinearLayout>