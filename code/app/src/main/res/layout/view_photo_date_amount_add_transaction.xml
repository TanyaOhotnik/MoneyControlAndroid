<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:paddingBottom="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:minWidth="150dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/transactionPhotoImageView"
            android:layout_weight="0.44"
            android:background="@android:color/darker_gray"
            android:layout_margin="4dp"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_menu_camera"
            android:id="@+id/addPhotoImageButton"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/sumString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:textAlignment="center"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_weight="0.25"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/addSumEditText"
            android:textAlignment="center"
            android:layout_weight="0.25"
            />
        <TextView
            android:text="@string/dateString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:layout_weight="0.25"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addDateTextView"
            android:textAlignment="center"
            tools:text="29.01.2032"
            android:padding="8dp"
            android:layout_weight="0.25"/>
    </LinearLayout>
</LinearLayout>